ANTHROPIC_API_KEY=your_anthropic_api_key_here
FLASK_SECRET_KEY=your_secret_key_here
UPLOAD_FOLDER=uploads
RESULTS_FOLDER=results

# Claude Configuration - Task-specific models for cost optimization
# Structure Classification: Simple task, use Haiku for cost efficiency
CLASSIFICATION_MODEL=claude-3-5-haiku-20241022
CLASSIFICATION_TEMPERATURE=0.0
CLASSIFICATION_MAX_TOKENS=2000

# Field Identification: Medium complexity, use Sonnet for better accuracy
FIELD_IDENTIFICATION_MODEL=claude-3-5-sonnet-20241022
FIELD_IDENTIFICATION_TEMPERATURE=0.0
FIELD_IDENTIFICATION_MAX_TOKENS=3000

# Data Extraction: Most critical, use Sonnet for maximum accuracy
DATA_EXTRACTION_MODEL=claude-3-5-sonnet-20241022
DATA_EXTRACTION_TEMPERATURE=0.0
DATA_EXTRACTION_MAX_TOKENS=4000

# Fallback and general settings
CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022
CLAUDE_TIMEOUT=90
CLAUDE_MAX_RETRIES=3

# Model configuration selector
MODEL_CONFIG=current

# Cost tracking
ENABLE_COST_TRACKING=true